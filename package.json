{
  "name": "music",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:ssr": "node server.js",
    "build": "npm-run-all lint:type --parallel build:*",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "lint": "run-p lint:*",
    "lint:code": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:type": "tsc",
    "format": "prettier --write src/",
    "preview": "vite preview",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.8",
    "@tanstack/react-query-devtools": "^5.17.8",
    "@tanstack/react-router": "^1.1.9",
    "@tanstack/router-devtools": "^1.1.9",
    "@xstate/react": "^4.0.2",
    "axios": "^1.6.5",
    "classnames": "^2.5.1",
    "framer-motion": "^10.17.9",
    "howler": "^2.2.4",
    "million": "^2.6.4",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.1",
    "xstate": "^5.4.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/types": "^18.4.4",
    "@tanstack/eslint-plugin-query": "^5.17.7",
    "@tanstack/react-router-server": "^1.1.9",
    "@tsconfig/node-lts": "^20.1.1",
    "@tsconfig/strictest": "^2.0.2",
    "@tsconfig/vite-react": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/howler": "^2.2.11",
    "@types/qs": "^6.9.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "express": "^4.18.2",
    "isbot": "^4.3.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rollup-plugin-visualizer": "^5.12.0",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^1.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint -e $1",
    "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
